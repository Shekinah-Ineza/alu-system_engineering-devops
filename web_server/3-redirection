#!/usr/bin/env bash
# Configures Nginx to redirect /redirect_me with a 301 permanent redirect

# Update package list and install Nginx if not already installed
sudo apt-get update -q
sudo apt-get install -y nginx

# Create Nginx configuration for the redirect
sudo tee /etc/nginx/sites-available/redirect > /dev/null <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    location = /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Enable the configuration
sudo ln -sf /etc/nginx/sites-available/redirect /etc/nginx/sites-enabled/

# Remove default configuration to avoid conflicts
sudo rm -f /etc/nginx/sites-enabled/default

# Test configuration and restart Nginx
sudo nginx -t && sudo systemctl restart nginx
